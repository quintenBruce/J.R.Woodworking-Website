@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<ul class="navbar-nav">
    @if(SignInManager.IsSignedIn(User))
    {
        <li class="nav-item d-flex align-items-center" href="#">
            <ul class="nav-link">
                Hello @UserManager.GetUserName(User)
            </ul>
        </li>
        <li class="nav-link">
            <form id="logoutForm" method="post" class="form-inline" asp-controller="Account" asp-action="LogOff">
                <button type="submit" class="logout-button btn btn-outline-secondary">Logout</button>
            </form>
        </li>
    }
    else
    {
    <div class="navbar-nav me-auto">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    </div>
    }
    
</ul>
